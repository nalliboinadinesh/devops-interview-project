# ========================================
# Docker Compose Environment Configuration
# ========================================

# Copy this file to .env.docker and fill in your actual values

# MongoDB Configuration
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=admin123
MONGO_DB_NAME=polytechnic-sis

# Server Configuration
PORT=5000
NODE_ENV=production

# JWT Secrets (Change these in production!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-12345
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-67890
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# AWS S3 Configuration (FOR FILE UPLOADS)
# Get these from AWS IAM Console
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_BUCKET_NAME=your-bucket-name
AWS_REGION=ap-south-1

# Email Configuration (FOR OTP)
# Use Gmail with App Password
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password

# CORS Configuration (Update IP as needed)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001,http://13.233.148.165:3000,http://13.233.148.165:3001

# Logging
LOG_LEVEL=info

# MongoDB Connection (for backend) - Example values (replace with your connection string)
MONGODB_URI=mongodb://localhost:27017/polytechnic-sis

# Frontend API URL (used during build)
REACT_APP_API_URL=http://localhost:5000/api